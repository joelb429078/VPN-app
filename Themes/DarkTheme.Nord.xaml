<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="ForegroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#FF3498DB"/>
    <SolidColorBrush x:Key="ButtonForegroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ListViewBackgroundColor" Color="#252525"/>
    <SolidColorBrush x:Key="TextBoxBackgroundColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextBoxForegroundColor" Color="#000000"/>
    <SolidColorBrush x:Key="CancelButtonBackgroundColor" Color="Gray"/>
    <SolidColorBrush x:Key="RectangleFillColor" Color="#3DA1FF"/>

    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundColor}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonForegroundColor}"/>
    </Style>

    <Style TargetType="ListView" BasedOn="{StaticResource {x:Type ListView}}">
        <Setter Property="Background" Value="{StaticResource ListViewBackgroundColor}"/>
    </Style>
</ResourceDictionary>
